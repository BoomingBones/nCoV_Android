<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OverviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/overall_container_domestic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/fragment_overview_list_header"/>

        <LinearLayout
            android:id="@+id/overview_domestic_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:divider="@drawable/shape_line"
            android:showDividers="middle|end" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/showAll"
            android:textColor="@color/more" />

        <FrameLayout
            android:id="@+id/overall_container_foreign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/fragment_overview_list_header"/>

        <LinearLayout
            android:id="@+id/overview_foreign_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:divider="@drawable/shape_line"
            android:showDividers="middle|end" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/showAll"
            android:textColor="@color/more" />

    </LinearLayout>

</ScrollView>